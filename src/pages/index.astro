---
import Layout from '../layouts/Layout.astro';
---

<Layout 
  title="TypaVibe - Create collections in 30 seconds"
  description="Create and share curated product collections instantly. No signup needed. Start curating your vibe in 30 seconds."
  image="/og-image.png"
  url={Astro.url.href}
  type="website"
>
  <main>
    <section class="hero">
      <h1>Curate anything, share everything</h1>
      <p class="hero-subtitle">The simplest way to create and share collections of anything you love</p>
      
      <!-- Quick create form -->
      <form action="/create" method="GET">
        <input 
          name="quick" 
          placeholder="What are you curating today?" 
          required 
        />
        <button type="submit">Start Creating</button>
      </form>
    </section>
    
    <!-- Use cases -->
    <section class="use-cases">
      <h2>Perfect for anyone who loves to share</h2>
      <div class="use-cases-grid">
        <div class="use-case">
          <div class="use-case-icon">üõçÔ∏è</div>
          <h3>Shoppers</h3>
          <p>Share your favorite finds, wishlists, and shopping recommendations</p>
        </div>
        <div class="use-case">
          <div class="use-case-icon">üìö</div>
          <h3>Learners</h3>
          <p>Curate resources, tools, and learning materials for your community</p>
        </div>
        <div class="use-case">
          <div class="use-case-icon">üé®</div>
          <h3>Creators</h3>
          <p>Showcase inspiration, tools, and resources that fuel your creativity</p>
        </div>
        <div class="use-case">
          <div class="use-case-icon">üíº</div>
          <h3>Professionals</h3>
          <p>Share industry insights, tools, and resources with your network</p>
        </div>
        <div class="use-case">
          <div class="use-case-icon">üè†</div>
          <h3>Homeowners</h3>
          <p>Create home improvement guides, decor ideas, and renovation resources</p>
        </div>
        <div class="use-case">
          <div class="use-case-icon">üéØ</div>
          <h3>Enthusiasts</h3>
          <p>Build communities around your passions, hobbies, and interests</p>
        </div>
      </div>
    </section>
    
    <!-- Features -->
    <section class="features">
      <h2>Why TypaVibe?</h2>
      <div class="features-grid">
        <div class="feature">
          <h3>‚ö° Instant</h3>
          <p>Create and share in 30 seconds. No account needed.</p>
        </div>
        <div class="feature">
          <h3>üîó Simple</h3>
          <p>Just add links. We handle the rest automatically.</p>
        </div>
        <div class="feature">
          <h3>üì± Shareable</h3>
          <p>One link to share your entire collection anywhere.</p>
        </div>
        <div class="feature">
          <h3>üé® Beautiful</h3>
          <p>Clean, modern design that makes your content shine.</p>
        </div>
      </div>
    </section>
    
    <!-- Navigation links -->
    <section style="text-align: center; margin-top: 48px;">
      <div style="display: flex; gap: 16px; justify-content: center; flex-wrap: wrap;">
        <a href="/explore" class="btn-secondary">Explore Collections</a>
        <a href="/auth" class="btn-secondary">Sign In</a>
      </div>
    </section>
  </main>
</Layout>

<style>
  .hero-subtitle {
    font-size: 18px;
    color: var(--color-text-secondary);
    margin-bottom: 32px;
    line-height: 1.5;
  }
  
  .use-cases {
    margin-top: 80px;
    text-align: center;
  }
  
  .use-cases h2 {
    margin-bottom: 48px;
    font-size: 28px;
    font-weight: 600;
    color: var(--color-text);
  }
  
  .use-cases-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 24px;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .use-case {
    background: var(--color-background-secondary);
    border: 1.5px solid var(--color-border);
    border-radius: var(--radius);
    padding: 24px;
    text-align: center;
    transition: all 0.2s ease;
  }
  
  .use-case:hover {
    border-color: var(--color-accent);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }
  
  .use-case-icon {
    font-size: 32px;
    margin-bottom: 16px;
  }
  
  .use-case h3 {
    margin: 0 0 12px 0;
    font-size: 18px;
    font-weight: 600;
    color: var(--color-text);
  }
  
  .use-case p {
    margin: 0;
    color: var(--color-text-secondary);
    line-height: 1.5;
    font-size: 14px;
  }
  
  .features {
    margin-top: 80px;
    text-align: center;
  }
  
  .features h2 {
    margin-bottom: 48px;
    font-size: 28px;
    font-weight: 600;
    color: var(--color-text);
  }
  
  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 24px;
    max-width: 1000px;
    margin: 0 auto;
  }
  
  .feature {
    padding: 24px;
    text-align: center;
  }
  
  .feature h3 {
    margin: 0 0 12px 0;
    font-size: 18px;
    font-weight: 600;
    color: var(--color-text);
  }
  
  .feature p {
    margin: 0;
    color: var(--color-text-secondary);
    line-height: 1.5;
    font-size: 14px;
  }
  
  @media (max-width: 768px) {
    .use-cases-grid {
      grid-template-columns: 1fr;
    }
    
    .features-grid {
      grid-template-columns: 1fr;
    }
    
    .use-cases h2,
    .features h2 {
      font-size: 24px;
    }
  }
</style>
