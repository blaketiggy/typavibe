<script>
  import { supabase } from '../lib/supabase.js';
  
  let currentUser = null;
  
  // Check authentication status
  async function checkAuth() {
    try {
      const { data: { user }, error } = await supabase.auth.getUser();
      if (!error && user) {
        currentUser = user;
        console.log('User authenticated:', user.email);
      }
    } catch (error) {
      console.error('Auth check error:', error);
    }
  }
  
  // Handle start collection button
  document.getElementById('start-collection-btn').addEventListener('click', async () => {
    if (currentUser) {
      // User is logged in, go directly to create
      window.location.href = '/create';
    } else {
      // User is not logged in, show auth modal
      showAuthModal();
    }
  });
  
  function showAuthModal() {
    document.getElementById('auth-modal').style.display = 'flex';
    document.body.style.overflow = 'hidden';
  }
  
  function closeAuthModal() {
    document.getElementById('auth-modal').style.display = 'none';
    document.body.style.overflow = 'auto';
  }
  
  function startAnonymous() {
    console.log('startAnonymous called');
    closeAuthModal();
    window.location.href = '/create';
  }
  
  // Close modal when clicking outside
  document.getElementById('auth-modal').addEventListener('click', (e) => {
    if (e.target.id === 'auth-modal') {
      closeAuthModal();
    }
  });
  
  // Make functions globally accessible
  window.startAnonymous = startAnonymous;
  window.showAuthModal = showAuthModal;
  window.closeAuthModal = closeAuthModal;
  
  // Initialize
  checkAuth();
</script>

<style>
  .hero-cta {
    font-size: 18px;
    padding: 16px 32px;
    font-weight: 600;
  }
  
  .hero-subtitle {
    font-size: 18px;
    color: var(--color-text-secondary);
    margin-bottom: 32px;
    line-height: 1.5;
  }
  
  /* Modal Styles */
  .modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
  }
  
  .modal-content {
    background: var(--color-background);
    border-radius: var(--radius);
    padding: 32px;
    max-width: 600px;
    width: 90%;
    max-height: 90vh;
    overflow-y: auto;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }
  
  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24px;
  }
  
  .modal-header h2 {
    margin: 0;
    font-size: 24px;
    font-weight: 600;
  }
  
  .modal-close {
    background: none;
    border: none;
    font-size: 24px;
    cursor: pointer;
    color: var(--color-text-secondary);
    padding: 0;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: all 0.2s;
  }
  
  .modal-close:hover {
    background: var(--color-background-secondary);
    color: var(--color-text);
  }
  
  .auth-options {
    display: grid;
    gap: 20px;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  }
  
  .auth-option-card {
    background: var(--color-background-secondary);
    border: 1.5px solid var(--color-border);
    border-radius: var(--radius);
    padding: 24px;
    text-align: center;
    transition: all 0.2s ease;
  }
  
  .auth-option-card:hover {
    border-color: var(--color-accent);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }
  
  .option-icon {
    font-size: 32px;
    margin-bottom: 16px;
  }
  
  .auth-option-card h3 {
    margin: 0 0 12px 0;
    font-size: 18px;
    font-weight: 600;
    color: var(--color-text);
  }
  
  .auth-option-card p {
    margin: 0 0 16px 0;
    color: var(--color-text-secondary);
    line-height: 1.5;
    font-size: 14px;
  }
  
  .option-benefits {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin-bottom: 20px;
    text-align: left;
  }
  
  .option-benefits span {
    font-size: 13px;
    color: var(--color-text-secondary);
  }
  
  .auth-option-card .btn-primary,
  .auth-option-card .btn-secondary {
    width: 100%;
    margin-top: 8px;
  }
  
  .use-cases {
    margin-top: 80px;
    text-align: center;
  }
  
  .use-cases h2 {
    margin-bottom: 48px;
    font-size: 28px;
    font-weight: 600;
    color: var(--color-text);
  }
  
  .use-cases-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 24px;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .use-case {
    background: var(--color-background-secondary);
    border: 1.5px solid var(--color-border);
    border-radius: var(--radius);
    padding: 24px;
    text-align: center;
    transition: all 0.2s ease;
