    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }
  
  .use-case-icon {
    font-size: 32px;
    margin-bottom: 16px;
  }
  
  .use-case h3 {
    margin: 0 0 12px 0;
    font-size: 18px;
    font-weight: 600;
    color: var(--color-text);
  }
  
  .use-case p {
    margin: 0;
    color: var(--color-text-secondary);
    line-height: 1.5;
    font-size: 14px;
  }
  
  .features {
    margin-top: 80px;
    text-align: center;
  }
  
  .features h2 {
    margin-bottom: 48px;
    font-size: 28px;
    font-weight: 600;
    color: var(--color-text);
  }
  
  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 24px;
    max-width: 1000px;
    margin: 0 auto;
  }
  
  .feature {
    padding: 24px;
    text-align: center;
  }
  
  .feature h3 {
    margin: 0 0 12px 0;
    font-size: 18px;
    font-weight: 600;
    color: var(--color-text);
  }
  
  .feature p {
    margin: 0;
    color: var(--color-text-secondary);
    line-height: 1.5;
    font-size: 14px;
  }
  
  @media (max-width: 768px) {
    .auth-options {
      grid-template-columns: 1fr;
    }
    
    .use-cases-grid {
      grid-template-columns: 1fr;
    }
    
    .features-grid {
      grid-template-columns: 1fr;
    }
    
    .use-cases h2,
    .features h2 {
      font-size: 24px;
    }
    
    .modal-content {
      padding: 24px;
      margin: 16px;
    }
  }
</style>
